<h1>Login Home</h1>

<% if (message.length > 0) { %>
  <div class="alert alert-danger"><%= message %></div>
<% } %>

<form action="/users/login" method="post">
  <div class="row">
    <div class="six columns">
      <input type="text" name="user[local][email]" id="user-email" placeholder="Your email" class="u-full-width">
    </div>
    <div class="six columns">
      <input type="password" name="user[local][password]" id="user-password" placeholder="Your password" class="u-full-width">
    </div>
    <input type="submit" value='Save My user'>
  </div>
</form>
